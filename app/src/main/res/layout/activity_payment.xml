<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".PaymentActivity">
        <!--Header textview-->
        <TextView
            android:id="@+id/payment_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/category_payment"
            android:text="@string/paypal"
            android:textSize="@dimen/text_size_paypal"
            android:textStyle="bold" />
        <!--Content view-->
        <TextView
            android:id="@+id/payment_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/payment_header"
            android:background="@color/category_payment"
            android:text="@string/paymentView" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/payment_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/layout_margin_top"
            android:orientation="horizontal">

            <Button
                android:id="@+id/payment_button_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="@dimen/view_width"
                android:layout_height="wrap_content"
                android:background="@android:color/black" />

            <Button
                android:id="@+id/payment_button_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="@dimen/view_width"
                android:layout_height="wrap_content"
                android:background="@android:color/black" />

            <Button
                android:id="@+id/payment_button_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="@dimen/view_width"
                android:layout_height="wrap_content"
                android:background="@android:color/black" />

            <Button
                android:id="@+id/payment_button_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>